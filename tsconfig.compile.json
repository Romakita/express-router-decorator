{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "declarationDir": "lib/",
    "sourceMap": true,
    "noResolve": false,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "multipartfiles",
    "swagger",
    "servestatic",
    "ajv",
    "socketio",
    "lib",
    "dist"
  ]
}